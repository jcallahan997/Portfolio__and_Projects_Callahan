FROM --platform=linux/amd64 python:3.10-slim
WORKDIR /app
ADD Callahan_Portfolio.py . 
ADD crash_data_prepped.csv .
ADD pages . 
COPY requirements.txt .
RUN pip3 install -r requirements.txt
EXPOSE 8501
HEALTHCHECK CMD curl --fail http://localhost:8501/_stcore/health
ENTRYPOINT ["streamlit", "run", "Callahan_Portfolio.py", "--server.port=8501", "--server.address=0.0.0.0"]